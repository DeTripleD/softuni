using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ReadFromConsole
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Hello, whats your name?");//Greating
            string[] fullName = Console.ReadLine().Split();
            string firstName = fullName[0];
            string lastName = fullName[1];
            Console.WriteLine("Hello {0} {1}, how are you?", firstName, lastName);//printing the value
           
            
        }
    }
}
