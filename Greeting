using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ReadFromConsole
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Hello, whats your name?");//Greeting
            string name = Console.ReadLine();//reading the value 
            Console.WriteLine("Hello " +name +", how are you?");//printing the value
           
            
        }
    }
}
